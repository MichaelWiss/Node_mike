extends layout

block content


      
   <div class="row pageheader">
     <div class="large-12 columns">
       <h1> pageHeader.title></h1>
     </div>
    </div>
    <div class="row">
     <div class="small-12 columns"><h1>pageHeader.title</h1></div>
     <div class="small-12 columns">
     <div class="small-4 columns">
         <p class="rating">
            +outputRating(location.rating)
         <p class="location.address">
           <p class="callout secondary">
             <span class="warning label">
             <h2 class="panel-title">Opening Hours</span>
            <p class="panel-body">
             each time in location.openingTimes
               <p>
                  | #{time.days} : 
                  if time.closed
                    | closed
                  else
                    | #{time.opening} - #{time.closing}
            <p class="callout secondary">
            <span class="warning label">
             <h2 class="panel-title">Facilities</h2>
            </span>
            <p class="panel-body">
               each facility in location.facilities
               <button class="warning hollow button">
              <p.class="callout secondary">
               <i class="fi-star"></i>
                 | &nbsp;#{facility}
                | &nbsp;
          <div class="small-12 medium-12 location-map">
    <div class="row">
      <div class="small-12 columns">
          <p class="location.address">
           <p class="callout secondary">
             <a href="href="/location/#{location._id}/review/new" class="button right">Add Review</a>
          <h2 class="panel-title">Customer reviews</h2>
           <p class="panel-body review-container">
            each review in location.reviews
       </div>
    </div>
             <div class="row">
              <div class="review">
                <div class="callout secondary review-header">
                 <span class="rating">
                 +outputRating(review.rating)
























           <div class="media-object">img.img-responsive.img-rounded(src="http://maps.googleapis.com/maps/api/staticmap?center=#{location.coords.lat},#{location.coords.lng}&zoom=17&size=400x350&sensor=false&markers=#{location.coords.lat},#{location.coords.lng}&scale=2")
           </div>
     </div>


