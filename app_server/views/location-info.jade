extends layout

block content
      
   <div class="row pageheader">
     <div class="large-12 columns">
       <h1> pageHeader.title></h1>
     </div>
    </div>
    <div class="row">
     <div class="small-12 columns"><h1>pageHeader.title</h1></div>
     <div class="small-12 columns">
     <div class="small-4 columns">
         <p class="rating">
            +outputRating(location.rating)
         <p class="location.address">
           <p class="callout secondary">
             <h2 class="panel-title">Opening Hours>
           <p class="panel-body">
             each time in location.openingTimes
               <p>
                  | #{time.days} : 
                  if time.closed
                    | closed
                  else
                    | #{time.opening} - #{time.closing}
            <p class="callout secondary">
             <h2 class="panel-title">Facilities</h2>
            <p class="panel-body">
               each facility in location.facilities
               <button class="warning hollow button">


           <div class="media-object">img.img-responsive.img-rounded(src="http://maps.googleapis.com/maps/api/staticmap?center=#{location.coords.lat},#{location.coords.lng}&zoom=17&size=400x350&sensor=false&markers=#{location.coords.lat},#{location.coords.lng}&scale=2")
           </div>
     </div>


